\newcommand{\epcqrcode@IterateAmount}[1]{%
    \StrChar{#1}{\theepcqrcode@c}[\epcqrcode@tmp]%
    \ifx\epcqrcode@tmp\empty%
        \relax%
    \else%
        \epcqrcode@CheckIfNumber{\epcqrcode@tmp}%
