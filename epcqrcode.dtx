    \StrGobbleLeft{#1}{4}[\epcqrcode@Reference]%
    \epcqrcode@TranslateLetters{\epcqrcode@Reference\epcqrcode@IdentifierPlusCheck}%
    \edef\epcqrcode@TranslatedCreditorReference{\epcqrcode@TranslateLettersResult}%
