    \else%
        \StrLen{\epcqr@reason}[\epcqrcode@ReasonLength]%
        \addtocounter{epcqrcode@OverallLength}{\epcqrcode@ReasonLength}%
    \fi%
    \ifx\epcqr@ref\empty%
        \relax%
    \else%
        \StrLen{\epcqr@ref}[\epcqrcode@RefLength]%
        \addtocounter{epcqrcode@OverallLength}{\epcqrcode@RefLength}%
    \fi%
